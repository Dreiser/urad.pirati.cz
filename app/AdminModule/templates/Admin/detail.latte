            </div>
            <div class="modal-body">
                bla bla bla
            </div>

        </div>
    </div>
</div>

<!-- pridat komentar -->
<div class="modal fade" id="pridatkomentar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Přidat komentář</h4>
            </div>
            <div class="modal-body">                    
                {form commentForm class => "form-horizontal", role => "form"}
                    <div class="form-group">
                        <label for="frm-name" class="col-sm-2 control-label">název</label>
                        <div class="col-sm-10">
                            <input n:name="name" type="text" class="form-control" id="jmeno" placeholder="jméno">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-text" class="col-sm-2 control-label">podnázev</label>
                        <div class="col-sm-10">
                            <textarea n:name="text" class="form-control" rows="5"></textarea>                            
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button n:name="save" type="submit" class="btn btn-warning">vložit komentář</button>
                        </div>
                    </div>
                    {input id}
                {/form}
            </div>

        </div>
    </div>
</div>    
