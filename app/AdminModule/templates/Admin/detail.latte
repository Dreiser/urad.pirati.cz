<!-- pridat kategorii -->
<div class="modal fade" id="pridatkategorii" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Přidat kategorii</h4>
            </div>
            <div class="modal-body">
                {form categoryForm class => "form-horizontal", role => "form"}
                    <div class="form-group">
                        <label for="frm-name" class="col-sm-3 control-label">název</label>
                        <div class="col-sm-9">
                            <input n:name="name" type="text" class="form-control" id="nazev" placeholder="název">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-desc" class="col-sm-3 control-label">podnázev</label>
                        <div class="col-sm-9">
                            <input n:name="desc" type="text" class="form-control" id="podnazev" placeholder="podnázev">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-icon" class="col-sm-3 control-label">návrh ikonky</label>
                        <div class="col-sm-9">
                            <input n:name="icon" type="text" class="form-control" id="popis_ikony" placeholder="nepovinné">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button n:name="save" type="submit" class="btn btn-warning">uložit návrh</button>
                        </div>
                    </div>
                    {input id}
                {/form}
            </div>

        </div>
    </div>
</div>

<!-- pridat odkaz -->
<div class="modal fade" id="pridatodkaz" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Přidat odkaz</h4>
            </div>
            <div class="modal-body">
                {form itemForm class => "form-horizontal", role => "form"}
                    <div class="form-group">
                        <label for="frm-name" class="col-sm-2 control-label">název</label>
                        <div class="col-sm-10">
                            <input n:name="name" type="text" class="form-control" id="nazev" placeholder="název">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-id_category" class="col-sm-2 control-label">kategorie</label>
                        <div class="col-sm-10">
                            {input id_category class=>"form-control", id=>"kategorie"}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-link" class="col-sm-2 control-label">URL</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon">http://</span>
                                <input n:name="link" type="text" class="form-control" id="url" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="frm-desc" class="col-sm-2 control-label">popis</label>
                        <div class="col-sm-10">
                            <textarea n:name="desc" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button n:name="save" type="submit" class="btn btn-warning">uložit návrh</button>
                        </div>
                    </div>
                    {input id}
                {/form}      
            </div>

        </div>
    </div>
</div> 
<!-- o webu -->
