{block fbpixel}
    {if  $flashes}
        {foreach $flashes as $flash}
            {if stristr($flash->message,"Vaše žádost byla úspěšně vytvořena!")}
                fbq('track', 'CompleteRegistration');
            {/if}
        {/foreach}
    {/if}
{/block}
{block content}
<div class="row">
  
  <div class="col-sm-6 col-sm-offset-3">
